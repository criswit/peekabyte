{
    "name": "peekabyte",
    "version": "0.1.0",
    "private": true,
    "main": "dist/main/index.js",
    "scripts": {
        "dev": "vite",
        "build": "npm run build:main && npm run build:preload && npm run build:renderer",
        "build:main": "tsc -p tsconfig.main.json",
        "build:preload": "tsc -p tsconfig.preload.json",
        "build:renderer": "vite build",
        "start": "cross-env NODE_ENV=production electron .",
        "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run dev\" \"npm run watch:main\" \"npm run watch:preload\" \"electron .\"",
        "watch:main": "tsc -p tsconfig.main.json --watch",
        "watch:preload": "tsc -p tsconfig.preload.json --watch",
        "electron:build": "npm run build && electron-builder",
        "debug": "DEBUG=electron* electron .",
        "clean": "rm -rf dist release node_modules/.vite",
        "serve:docs": "mdbook serve docs"
    },
    "dependencies": {
        "chokidar": "^3.5.3",
        "katex": "^0.16.22",
        "mermaid": "^11.9.0",
        "prop-types": "^15.8.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-markdown": "^9.0.1",
        "react-syntax-highlighter": "^15.5.0",
        "rehype-katex": "^7.0.1",
        "remark-gfm": "^4.0.0",
        "remark-math": "^6.0.0",
        "styled-components": "^6.1.8"
    },
    "devDependencies": {
        "electron": "^28.2.0",
        "@types/katex": "^0.16.7",
        "@types/node": "^24.0.10",
        "@types/prop-types": "^15.7.15",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@types/react-syntax-highlighter": "^15.5.13",
        "@types/styled-components": "^5.1.34",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^8.2.2",
        "cross-env": "^7.0.3",
        "electron-builder": "^24.9.1",
        "typescript": "^5.8.3",
        "vite": "^4.5.1"
    },
    "build": {
        "appId": "criswit.peekabyte",
        "productName": "Peekabyte",
        "copyright": "Copyright Â© 2024",
        "files": [
            "dist/**/*",
            "assets/icon*.png"
        ],
        "extraResources": [
            {
                "from": "assets/icon.png",
                "to": "icon.png"
            }
        ],
        "directories": {
            "buildResources": "assets",
            "output": "release"
        },
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "assets/icon.png"
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.ico"
        },
        "linux": {
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                },
                {
                    "target": "deb",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "assets/",
            "category": "Development",
            "maintainer": "christopherthethird",
            "desktop": {
                "Name": "peekabyte",
                "Comment": "peekabyte, poppin out, your file interface is lame",
                "StartupWMClass": "peekabyte",
                "Icon": "peekabyte"
            }
        }
    }
}
